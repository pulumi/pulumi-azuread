{
    "compilerOptions": {
        "outDir": "bin",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "files": [
        "application.ts",
        "config/index.ts",
        "config/vars.ts",
        "getApplication.ts",
        "getDomains.ts",
        "getGroup.ts",
        "getServicePrincipal.ts",
        "getUser.ts",
        "group.ts",
        "index.ts",
        "provider.ts",
        "servicePrincipal.ts",
        "servicePrincipalPassword.ts",
        "user.ts",
        "utilities.ts"
    ]
}

